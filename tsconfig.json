{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "dom",
            "es5",
            "es2015",
            "es2016",
            "es2017",
            "es2019"
        ],
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "allowJs": true,
        "outDir": "./temp/dist"
    },
    "exclude": [
        "node_modules",
        "library",
        "local",
        "temp",
        "build",
        "settings"
    ]
}